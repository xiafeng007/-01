/* pages/activitydetailed/activitydetailed.wxss */
.topImg{
  width: 520rpx;
  height: 90rpx;
  margin:0 auto;
  display: block;
  position: relative;
}
.topImg image{
  width: 520rpx;
  height: 90rpx;
}
.topImg text{
  position: absolute;
  color:#fff;
  top: 0;
  left: 0;
  width: 520rpx;
  text-align: center;
  line-height: 90rpx;
  font-size:35rpx;
}
.fl{
  float:left;
}
.fr{
  float:right;
}
.con{
  padding:0 30rpx;
  overflow: hidden;
  margin:40rpx 0 0;
}
.con text{
  font-size: 32rpx;
  color:#FDA23C;
  line-height: 40rpx;
}
.con .btn{
  background: #FDA23C;
  color:#fff;
  padding:5rpx 10rpx;
  border-radius: 15rpx;
}

.txt{
  padding:20rpx 30rpx;
}
.txt .t1{
  color:#333333;
  font-size:32rpx;
  line-height: 60rpx;
}
.txt .t2{
  color:#666;
  font-size:30rpx;
}

.table {  
  border: 1px solid #DE3A36; 
  margin-top: 1rem;  
  margin-right: 1rem;  
  margin-left: 1rem;
  border-bottom:0;  
  font-size:28rpx;
}  
.tr {  
  display: flex;  
  width: 100%;  
  justify-content: center;  
  height: 3rem;  
  align-items: center;
  line-height: 3rem;

}  
.td {  
    width:20%;  
    justify-content: center;  
    display: flex;  
    text-align: center;  
    border-right: 1px solid #ddd;  
    height: 100%;  
}  
.td-1 {  
    width:30%;  
    justify-content: center;  
    display: flex;  
    text-align: center;  
    border-right: 1px solid #DE3A36;
    height: 100%; 
    border-bottom:1px solid #DE3A36; 
}  
.td-2 {  
    width:70%;  
    justify-content: center;  
    border-right: 1px solid #ddd;  
    text-align: left;  
    height: 100%;  
    max-width: 100%;  
    padding: 40rpx 0;  
}  
.bg-w{  
  background:#DE3A36;
  
}  
.bg-g{  
  border-bottom:1px solid #DE3A36;
}  
.bg-g2{  
  background: #fff;  
}  
.th {  
  width: 30%;  
  justify-content: center;  
  color: #fff;  
  display: flex;  
  height: 3rem;  
  align-items: center;  
  border-right: 1px solid #ddd;  
}  
.th-2 {  
  width: 70%;  
  justify-content: center;  
  color: #fff;  
  display: flex;  
  height: 3rem;  
  align-items: center;  
  max-height:  3rem;  
  max-width: 70%;  
}
.th-text {  
  width: 100%;  
  justify-content: center;  
  color: #000;  
  display: block;  
  height: 3rem;  
  align-items: center;  
  max-height:  3rem;  
  max-width: 100%;  
  line-height: 3rem;
  text-align: center;
  border-bottom:1px solid #DE3A36;
} 