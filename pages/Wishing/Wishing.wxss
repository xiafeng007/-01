.top image{
  width:100%;
  height:360rpx;
}
.top{
  position: relative;
  height:360rpx;
}
.top .info{
  position: absolute;
  top:60rpx;
  width:100%;
  text-align: center;
  color:#fff;
}
.top .info text{
  display: block;
  margin-bottom:10rpx;
}
.section__title{
  padding-left:30rpx;
  vertical-align: top;
  line-height: 80rpx;
  font-size:30rpx;
}
.form .section{
  display: flex;
  align-items:flex-start;
  border:1px solid #D7D7D7;
  border-radius: 25rpx;
  margin-bottom:30rpx;
}
.form{
  margin:30rpx 0;
  display: block;
  padding:0 30rpx;
}
.form-title{
  text-align: center;
  display: block;
  margin:10px 0;
}
.input-txt{
  height: 80rpx; 
  width:550rpx;
  font-size: 30rpx;
}
.textarea-txt{
  height: 160rpx; 
  width:550rpx;
  padding-top:22rpx;
  font-size:30rpx;
}
.bbtn image{
  width:360rpx;
  height:100rpx;
  display: inline-block;
  border:0;
  outline: 0;
}
.radio-group{
  margin-top:10rpx;
  vertical-align: middle;
  transform: scale(0.8)
}
.radio{
  margin-right:20rpx;
}
button{
  background-color: transparent;
  border:0;
  padding:0;
  width:360rpx;
  height:100rpx;
  margin:40rpx auto;
}
button::after{
border: none;
}
.input-picker{
  font-size:30rpx;
  height: 80rpx; 
  width:550rpx;
  line-height: 80rpx;
  text-indent: 30rpx;
}