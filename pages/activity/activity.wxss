.activity{
  padding:0 30rpx;
}
.activity-list{
  position: relative;
  height: 360rpx;
  margin-bottom:30rpx;
}
.activity-list .pic{
  width:100%;
  height: 100%;
}
.info{
  position: absolute;
  bottom:30rpx;
  left: 0;
  padding:0 20rpx;
}
.info text{
  color:#fff;
  font-size:35rpx;
  line-height: 60rpx;
  display: block;
}
.activity-list rich-text{
  background: #FD9827;
  width:180rpx;
  height:50rpx;
  display: block;
  font-size:32rpx;
  color:#fff;
  line-height: 50rpx;
  border-radius: 5rpx;
  text-align: center;
  position: absolute;
  right:30rpx;
  top:30rpx;
}